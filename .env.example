# Database Configuration
DATABASE_URL="file:./prisma/dev.db"

# Authentication
NEXTAUTH_SECRET="your-production-secret-key-minimum-32-characters-long"
NEXTAUTH_URL="https://your-domain.com"

# Application Settings
NODE_ENV="development"
NEXT_PUBLIC_APP_NAME="INR100"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# AI Service Configuration
ZAI_API_KEY="your-zai-api-key"
ZAI_API_URL="https://api.zai.dev"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@INR100.com"

# Payment Gateway Configuration
RAZORPAY_KEY_ID="your-razorpay-key-id"
RAZORPAY_KEY_SECRET="your-razorpay-key-secret"
RAZORPAY_WEBHOOK_SECRET="your-webhook-secret"

# Market Data API (optional)
ALPHA_VANTAGE_API_KEY="your-alpha-vantage-api-key"
FMP_API_KEY="your-fmp-api-key"

# Security
JWT_SECRET="your-jwt-secret-key-minimum-32-characters"
ENCRYPTION_KEY="your-encryption-key-32-characters"

# Redis Configuration (for caching)
REDIS_URL="redis://localhost:6379"

# Analytics
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
MIXPANEL_TOKEN="your-mixpanel-token"

# Social Authentication (optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_CHAT="true"
NEXT_PUBLIC_ENABLE_PREMIUM_FEATURES="true"
NEXT_PUBLIC_ENABLE_REFERRAL_PROGRAM="true"
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN="true"

# Development/Debug
LOG_LEVEL="info"
DEBUG="false"